"use client";

import React, { useEffect, useState, useMemo, useCallback } from "react";
import { Header } from "@/components/Header";
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { ComplaintForm } from "@/components/complaints/ComplaintForm";
import { ComplaintsList } from "@/components/complaints/ComplaintsList";
import { DocumentUpload } from "@/components/documents/DocumentUpload";
import { DocumentViewer } from "@/components/documents/DocumentViewer";
import { AlertCircle, FileText, MessageSquare, Loader2 } from "lucide-react";
import { Select, SelectTrigger, SelectContent, SelectItem, SelectValue } from "@/components/ui/select";
import { Input } from "@/components/ui/input";

interface Dam { id: string; name: string; }
interface Forest { id: string; name: string; }

export default function ComplaintsEvidencePage() {
  const [uploadOpen, setUploadOpen] = useState(false);
  const [complaintOpen, setComplaintOpen] = useState(false);
  const [source, setSource] = useState<"dam" | "forest">("dam");
  const [dams, setDams] = useState<Dam[]>([]);
  const [forests, setForests] = useState<Forest[]>([]);
  const [selectedId, setSelectedId] = useState<string>("");
  const [dataLoading, setDataLoading] = useState(true);
  const [forestSearch, setForestSearch] = useState<string>("");
  const [showForestDropdown, setShowForestDropdown] = useState(false);

  useEffect(() => {
    const controller = new AbortController();
    const fetchData = async () => {
      setDataLoading(true);
      try {
        const apiUrl = process.env.NEXT_PUBLIC_API_URL || "http://localhost:3002/api";
        const [damsRes, forestsRes] = await Promise.all([
          fetch(`${apiUrl}/dams`, { signal: controller.signal }),
          fetch(`${apiUrl}/forests`, { signal: controller.signal })
        ]);
        
        const [damsResult, forestsResult] = await Promise.all([
          damsRes.json(),
          forestsRes.json()
        ]);
        
        if (damsResult.success) setDams(damsResult.data || []);
        if (forestsResult.success) setForests(forestsResult.data || []);
      } catch (e: any) {
        if (e?.name !== 'AbortError') {
          console.error("Failed to load data", e);
        }
      } finally {
        setDataLoading(false);
      }
    };
    
    fetchData();
    return () => controller.abort();
  }, []);

  useEffect(() => {
    setSelectedId("");
    setForestSearch("");
    setShowForestDropdown(false);
  }, [source]);

  const selectedItem = useMemo(() => 
    source === "dam" ? dams.find(d => d.id === selectedId) : forests.find(f => f.id === selectedId),
    [source, selectedId, dams, forests]
  );

  const currentItems = useMemo(() => {
    if (source === "dam") return dams;
    if (!forestSearch.trim()) return forests;
    return forests.filter(forest => 
      forest.name.toLowerCase().includes(forestSearch.toLowerCase())
    );
  }, [source, dams, forests, forestSearch]);

  const handleSourceChange = useCallback((newSource: "dam" | "forest") => {
    setSource(newSource);
    setSelectedId("");
    setForestSearch("");
    setShowForestDropdown(false);
  }, []);

  const handleItemSelect = useCallback((itemId: string) => {
    setSelectedId(itemId);
  }, []);

  if (dataLoading) {
    return (
      <div className="min-h-screen bg-background">
        <Header />
        <main className="max-w-7xl mx-auto p-4 space-y-4">
          <div className="flex items-center justify-center py-12">
            <Loader2 className="w-8 h-8 animate-spin text-primary" />
            <span className="ml-2 text-muted-foreground">Loading projects...</span>
          </div>
        </main>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-background">
      <Header />
      <main className="max-w-7xl mx-auto p-4 space-y-4">
        <div className="text-center py-6">
          <h1 className="text-3xl font-bold mb-2">Complaints & Evidence Portal</h1>
          <p className="text-muted-foreground max-w-2xl mx-auto">
            Submit complaints and upload evidence for dam and forest projects.
          </p>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <Card className="p-6">
            <div className="flex items-center gap-3 mb-6">
              <div className="w-10 h-10 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
                <MessageSquare className="w-5 h-5 text-green-600 dark:text-green-400" />
              </div>
              <div>
                <h2 className="font-semibold text-lg">Submit Complaint & Evidence</h2>
                <p className="text-sm text-muted-foreground">Report issues and upload documents</p>
              </div>
            </div>
            
            <div className="space-y-4">
              <div>
                <label className="text-sm font-medium mb-2 block">Project Type</label>
                <Select value={source} onValueChange={handleSourceChange}>
                  <SelectTrigger className="w-full">
                    <SelectValue placeholder="Select type" />
                  </SelectTrigger>
                  <SelectContent>
                    <SelectItem value="dam">Dam Project</SelectItem>
                    <SelectItem value="forest">Forest Area</SelectItem>
                  </SelectContent>
                </Select>
              </div>
              
              <div>
                <label className="text-sm font-medium mb-2 block">Select Project</label>
                {source === "dam" ? (
                  <div className="flex gap-2">
                    <Select value={selectedId} onValueChange={handleItemSelect}>
                      <SelectTrigger className="flex-1">
                        <SelectValue placeholder="Choose a dam" />
                      </SelectTrigger>
                      <SelectContent>
                        {currentItems.map((item: Dam) => (
                          <SelectItem key={item.id} value={item.id}>{item.name}</SelectItem>
                        ))}
                      </SelectContent>
                    </Select>
                    <Button 
                      size="sm" 
                      onClick={() => setComplaintOpen(true)} 
                      disabled={!selectedId}
                      className="px-4"
                    >
                      Open Form
                    </Button>
                  </div>
                ) : (
                  <div className="space-y-2">
                    <Input
                      placeholder="Type forest name to search..."
                      value={forestSearch}
                      onChange={(e) => setForestSearch(e.target.value)}
                      onFocus={() => setShowForestDropdown(true)}
                      className="w-full"
                    />
                    {showForestDropdown && (
                      <div className="border rounded-md bg-background shadow-lg max-h-60 overflow-auto">
                        {currentItems.map((item: Forest) => (
                          <div
                            key={item.id}
                            className="px-3 py-2 hover:bg-muted cursor-pointer text-sm"
                            onClick={() => {
                              setSelectedId(item.id);
                              setShowForestDropdown(false);
                            }}
                          >
                            {item.name}
                          </div>
                        ))}
                        {currentItems.length === 0 && (
                          <div className="px-3 py-2 text-sm text-muted-foreground">
                            No forests found
                          </div>
                        )}
                      </div>
                    )}
                    {selectedId && (
                      <div className="flex gap-2 mt-2">
                        <Button 
                          size="sm" 
                          onClick={() => setComplaintOpen(true)} 
                          className="px-4"
                        >
                          Submit Complaint
                        </Button>
                        <Button 
                          size="sm" 
                          variant="outline"
                          onClick={() => setUploadOpen(true)} 
                          className="px-4"
                        >
                          Upload Evidence
                        </Button>
                      </div>
                    )}
                  </div>
                </div>
                
                {selectedId && (
                  <div className="space-y-4 mt-6">
                    <ComplaintsList targetType={source} targetId={selectedId} />
                    <DocumentViewer targetType={source} targetId={selectedId} />
                  </div>
                )}
              </div>
            </Card>

            <Card className="p-6">
              <div className="flex items-center gap-3 mb-6">
                <div className="w-10 h-10 bg-lime-100 dark:bg-lime-900 rounded-lg flex items-center justify-center">
                  <AlertCircle className="w-5 h-5 text-lime-600 dark:text-lime-400" />
                </div>
                <div>
                  <h2 className="font-semibold text-lg">Guidelines</h2>
                  <p className="text-sm text-muted-foreground">How to contribute</p>
                </div>
              </div>
              
              <div className="space-y-4">
                <div className="p-4 bg-muted/50 rounded-lg">
                  <h3 className="font-medium mb-2 text-sm">Submitting Complaints</h3>
                  <ul className="text-xs text-muted-foreground space-y-1">
                    <li>Provide detailed descriptions</li>
                    <li>Include specific locations</li>
                    <li>Submit anonymously if preferred</li>
                  </ul>
                </div>
                
                <div className="p-4 bg-muted/50 rounded-lg">
                  <h3 className="font-medium mb-2 text-sm">Uploading Evidence</h3>
                  <ul className="text-xs text-muted-foreground space-y-1">
                    <li>RTI responses</li>
                    <li>Government reports</li>
                    <li>Photos and videos</li>
                  </ul>
                </div>
              </div>
            </Card>
          </div>
        </main>

        <DocumentUpload open={uploadOpen} onOpenChange={setUploadOpen} selectedType={source} targetId={selectedId || undefined} targetName={selectedItem?.name} />
        <ComplaintForm open={complaintOpen} onOpenChange={setComplaintOpen} selectedType={source} targetId={selectedId || undefined} targetName={selectedItem?.name} />
      </div>
    );
  );
}
