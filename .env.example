# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Backend Configuration
PORT=3001
FRONTEND_URL=http://localhost:3000

# Postgres Database Configuration
# Set either DATABASE_URL or the individual PG* variables
DATABASE_URL=postgres://postgres:password@localhost:5432/terratrace
PGHOST=localhost
PGPORT=5432
PGDATABASE=terratrace
PGUSER=postgres
PGPASSWORD=your_password
# Set to 'require' if your provider enforces SSL
PGSSLMODE=disable

# Mapbox/Leaflet Configuration
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
NEXT_PUBLIC_MAP_CENTER_LAT=23.1815
NEXT_PUBLIC_MAP_CENTER_LNG=79.9864

# Satellite Imagery APIs
SENTINEL_API_KEY=your_sentinel_api_key
LANDSAT_API_KEY=your_landsat_api_key

# NLP/Document Processing
NLP_API_URL=http://localhost:5000
NLP_API_KEY=your_nlp_api_key
